{
  "name": "@asmartbear/citation",
  "version": "1.0.4",
  "description": "Parsing and loading citations",
  "keywords": [
    "status",
    "cli"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "test": "echo no tests",
    "watch": "npm test -- --watchAll --coverage",
    "coverage": "npm test -- --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "main": "tsc && node dist/index.js",
    "minify": "uglifyjs --compress --mangle --output dist/index.min.js -- dist/index.js",
    "postbuild": "npm run minify",
    "prerelease": "npm test && npm run build",
    "prepare": "npm test && npm run build",
    "release": "standard-version",
    "postpublish": "git push origin main --follow-tags"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/node-fetch": "^2.6.13",
    "open-cli": "6.0.1",
    "rimraf": "^6.1.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@citation-js/core": "^0.7.21",
    "@citation-js/plugin-csl": "^0.7.21",
    "@citation-js/plugin-doi": "^0.7.21",
    "@citation-js/plugin-isbn": "^0.4.0",
    "@metascraper/helpers": "^5.49.5",
    "metascraper": "^5.49.5",
    "metascraper-author": "^5.49.5",
    "metascraper-date": "^5.49.5",
    "metascraper-description": "^5.49.5",
    "metascraper-image": "^5.49.5",
    "metascraper-logo": "^5.49.5",
    "metascraper-publisher": "^5.49.5",
    "metascraper-title": "^5.49.5",
    "metascraper-url": "^5.49.5"
  },
  "license": "MIT",
  "repository": {
    "url": "git@github.com:asmartbear/citation.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/asmartbear/citation/issues"
  },
  "author": {
    "name": "Jason Cohen",
    "url": "https://github.com/asmartbear"
  },
  "main": "dist/index.min.js",
  "files": [
    "dist"
  ],
  "types": "dist",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "test/.*\\.(ts|tsx|js)$"
  }
}
